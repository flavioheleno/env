{
  "name": "flavioheleno/env",
  "description": "Handle environment variables like a breeze.",
  "type": "library",
  "keywords": ["environment", "env", "envvar", "environment variable", "env variable", "env var"],
  "homepage": "https://github.com/flavioheleno/env",
  "license": "mit",
  "authors": [
    {
      "name": "Flavio Heleno",
      "email": "flaviohbatista@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Env\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "test/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": "^7.3",
    "hirak/prestissimo": "^0.3.10",
    "roave/security-advisories": "dev-master"
  },
  "require-dev": {
    "php-parallel-lint/php-parallel-lint": "^1.2",
    "phpstan/phpstan": "^0.12",
    "phpunit/phpunit": "^9.1",
    "psy/psysh": "^0.10",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "scripts": {
    "check": [
      "vendor/bin/phpstan analyse --level=8 --autoload-file=vendor/autoload.php src/ test/"
    ],
    "lint": [
      "vendor/bin/parallel-lint --exclude vendor .",
      "vendor/bin/phpcs --standard=ruleset.xml src/ test/"
    ],
    "test": [
      "./vendor/bin/phpunit ./test/ --coverage-html=./report/coverage/ --whitelist=./src/ --testdox-html=./report/testdox.html --disallow-test-output --process-isolation"
    ]
  }
}
